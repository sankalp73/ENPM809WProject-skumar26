@{
    ViewData["Title"] = "User Login";
}

<div class="text-center">
    <h1 class="display-4">Welcome to VMS!</h1>
</div>


<form asp-action="SignIn" asp-controller="Welcome">
    <p style="border:3px; border-style:solid; border-color:#FF0000; padding: 1em;">

        <label for="umail">Email:</label>
        <input type="text" id="umail" name="Email"><br>


        <label for="pass">Password:</label>
        <input type="password" id="pass" name="Pass"><br>

        <input type="submit" value="Sign In"><br>
    </p>
</form>
<input type="button"
       value="SignOn"
       onclick="location.href='@Url.Action("SignOn", "Welcome" )'" />

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
